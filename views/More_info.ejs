     <section class="job-details">
        <h1 class="heading">Full Information </Name></h1>
        <div class="details">
            <div class="jon-info">
                <h3><%= name.rows[0].name %></h3>
                <!-- <a href="view_company.html">IT Google</a> -->
                <!-- <p><i class="fa-solid fa-location-dot"></i>Mumbai, India</p> -->
            </div>
            <!-- <div class="basic-details">
                <h3>Salary</h3>
