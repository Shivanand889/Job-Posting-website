<body>
     <header class="header">
        <section class="flex">
           <div id="menu-btn" class="fa-solid fa-bars-staggered"></div>
           <a href="#" class="logo client-logo">
              <i class="fa-solid fa-building"></i>
              <h3><%=cname.rows[0].company_name%></h3>
           </a>
           <nav class="navbar">
              <a  href="/jobs">Home</a>
              <a  href="/about">About us</a>
              <a  href="/contact">Contact us</a>
           </nav>
        </section>
     </header>


     <section class="job-details client-home-container">
        <h1 class="heading">Full Information </Name></h1>
        <div class="details details-box">
            <div class="jon-info">
                <h3><%= name.rows[0].name %></h3>
                <!-- <a href="view_company.html">IT Google</a> -->
                <!-- <p><i class="fa-solid fa-location-dot"></i>Mumbai, India</p> -->
            </div>
            <!-- <div class="basic-details">
                <h3>Salary</h3>
                <p>30-40k/month</p>
                <h3>benefits</h3>
                <p>Work from home, health insurance</p>
                <h3>Work type</h3>
                <p>part-time</p>
                <h3>Schedule</h3>
                <p>Day shift</p>
            </div> -->
            <ul>
                <h3>Education</h3>
                <% for(let i = 0; i < edu.rows.length; i += 1) { %>
                    <%let v = "Education " + (i+1) ; %>
                    <h2><%=v%></h2>
                    <% var s= new Date(edu.rows[i].starting_date).toLocaleDateString('en-GB');%>
                    <% var e= new Date(edu.rows[i].completion_date).toLocaleDateString('en-GB');%>
                <li>Institue Name :  <span><%= edu.rows[i].institute_university_name%>(<%=s %>-<%=e%>)</span></li>
                <li>Degree: <span><%=edu.rows[i].certificate_degree_name%></span></li>
                <li>Branch: <span><%=edu.rows[i].major %></span></li>
                <li>Cgpa: <span><%=edu.rows[i].cgpa %></span></li>
                <!-- <li>experience: <span>3+ years</span></li> -->
                <% } %>
            </ul>
            <ul>
                <h3>Experience</h3>
                <% for(let i = 0; i < exp.rows.length; i += 1) { %>
                    <%let v = "Experience " + (i+1) ; %>
                    <h2><%=v%></h2>
                    <% var s= new Date(exp.rows[i].start_date).toLocaleDateString('en-GB');%>
                    <% var e= new Date(exp.rows[i].end_date).toLocaleDateString('en-GB');%>
                <li>Company Name :  <span><%= exp.rows[i].company_name%>(<%=s %>-<%=e%>)</span></li>
                <li>title: <span><%=exp.rows[i].job_title%></span></li>
                <li>City: <span><%=exp.rows[i].job_location_city %></span></li>
                <li>Description: <span><%=exp.rows[i].description %></span></li>
                <!-- <li>experience: <span>3+ years</span></li> -->
                <% } %>
            </ul>
            <!-- <ul>
                <h3>requirements</h3>
                <li>education: <span>graduate</span></li>
                <li>age: <span>18+</span></li>
                <li>language: <span>hindi , english</span></li>
                <li>experience: <span>3+ years</span></li>
            </ul> -->
            <ul>
                <h3>Skills</h3>
                <li><%= skill.rows.map(row => row.skill_name).join(', ') %></li>

            </ul>
