            <ul>
                <h3>Education</h3>
                <% for(let i = 0; i < edu.rows.length; i += 1) { %>
                    <%let v = "Education " + (i+1) ; %>
                    <h3><%=v%></h3>
                    <% var s= new Date(edu.rows[i].starting_date).toLocaleDateString('en-GB');%>
                    <% var e= new Date(edu.rows[i].completion_date).toLocaleDateString('en-GB');%>
                <li>Institue Name :  <span><%= edu.rows[i].institute_university_name%>(<%=s %>-<%=e%>)</span></li>
                <li>Degree: <span><%=edu.rows[i].certificate_degree_name%></span></li>
                <li>Branch: <span><%=edu.rows[i].major %></span></li>
                <li>Cgpa: <span><%=edu.rows[i].cgpa %></span></li>
                <!-- <li>experience: <span>3+ years</span></li> -->
                <% } %>
            </ul>
            <ul>
                <h3>Experience</h3>
                <% for(let i = 0; i < exp.rows.length; i += 1) { %>
                    <%let v = "Experience " + (i+1) ; %>
                    <h3><%=v%></h3>
                    <% var s= new Date(exp.rows[i].start_date).toLocaleDateString('en-GB');%>
                    <% var e= new Date(exp.rows[i].end_date).toLocaleDateString('en-GB');%>
                <li>Company Name :  <span><%= exp.rows[i].company_name%>(<%=s %>-<%=e%>)</span></li>
                <li>title: <span><%=exp.rows[i].job_title%></span></li>
                <li>City: <span><%=exp.rows[i].job_location_city %></span></li>
                <li>Description: <span><%=exp.rows[i].description %></span></li>
                <!-- <li>experience: <span>3+ years</span></li> -->
                <% } %>
            </ul>
            <!-- <ul>
                <h3>requirements</h3>
